<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="FacebookTheme" parent="AppTheme">
        <item name="colorAccent">@color/facebook</item>
        <item name="colorButtonBack">@color/facebook</item>
        <item name="colorContrast">@android:color/white</item>
    </style>

    <style name="TwitterTheme" parent="AppTheme">
        <item name="colorAccent">@color/twitter</item>
        <item name="colorButtonBack">@color/twitter</item>
        <item name="colorContrast">@android:color/white</item>
    </style>

    <style name="InstagramTheme" parent="AppTheme">
        <item name="colorAccent">@android:color/black</item>
        <item name="colorButtonBack">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorContrast">@android:color/black</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>
</resources>
